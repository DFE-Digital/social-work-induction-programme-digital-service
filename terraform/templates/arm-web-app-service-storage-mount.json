{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "appName": {
      "type": "string"
    },
    "storageAccountType": {
      "type": "string"
    },
    "storageAccountName": {
      "type": "string"
    },
    "shareName": {
      "type": "string"
    },
    "storageAccessKey": {
      "type": "securestring"
    },
    "mountPath": {
      "type": "string"
    },
    "mountOptions": {
      "type": "string"
    }
  },  
  "resources": [
    {
      "type": "Microsoft.Web/sites/config",
      "apiVersion": "2024-11-01",
      "name": "[concat(parameters('appName'), '/azurestorageaccounts')]",
      "properties": {
        "moodledata": {
          "type": "[parameters('storageAccountType')]",
          "accountName": "[parameters('storageAccountName')]",
          "shareName": "[parameters('shareName')]",
          "accessKey": "[parameters('storageAccessKey')]",
          "mountPath": "[parameters('mountPath')]",
          "mountOptions": "[parameters('mountOptions')]"
        }
      }
    }
  ]
}