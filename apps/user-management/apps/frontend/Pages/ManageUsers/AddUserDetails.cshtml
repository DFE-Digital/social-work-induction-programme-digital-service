@page
@model Dfe.Sww.Ecf.Frontend.Pages.ManageUsers.AddUserDetails

@{
    Model.Title = "Add account details";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <form method="post" data-test-id="add-user-form">
            <govuk-fieldset>
                <govuk-fieldset-legend is-page-heading="true" class="govuk-fieldset__legend--l">Enter their details</govuk-fieldset-legend>

                <govuk-input for="FirstName" autocomplete="given-name" spellcheck="false" type="text" input-class="govuk-!-width-two-thirds">
                    <govuk-input-label class="govuk-label"/>
                    <govuk-input-error-message/>
                </govuk-input>

                <govuk-input for="LastName" autocomplete="family-name" spellcheck="false" type="text" input-class="govuk-!-width-two-thirds">
                    <govuk-input-label class="govuk-label"/>
                    <govuk-input-error-message/>
                </govuk-input>

                <govuk-input for="Email" autocomplete="email" spellcheck="false" type="email" input-class="govuk-!-width-two-thirds">
                    <govuk-input-label class="govuk-label"/>
                    <govuk-input-error-message/>
                </govuk-input>

                @if (!Model.IsStaff)
                {
                    <govuk-input for="SocialWorkEnglandNumber" spellcheck="false" input-class="govuk-!-width-one-third">
                        <govuk-input-label class="govuk-label">Social Work England registration number</govuk-input-label>
                        <govuk-input-hint class="govuk-hint">For example, SW1234</govuk-input-hint>
                        <govuk-input-error-message/>
                    </govuk-input>
                }

            </govuk-fieldset>

            <govuk-button type="submit" data-test-id="add-account">Add account</govuk-button>
        </form>
    </div>
</div>
