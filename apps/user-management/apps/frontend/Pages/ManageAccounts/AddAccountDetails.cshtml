@page
@model Dfe.Sww.Ecf.Frontend.Pages.ManageAccounts.AddAccountDetails

@{
    ViewData["Title"] = "Add account details";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <form asp-page="AddAccountDetails" method="post">
            <govuk-fieldset>
                <govuk-fieldset-legend is-page-heading="true" class="govuk-fieldset__legend--l">Enter their details</govuk-fieldset-legend>

                <govuk-input asp-for="FirstName" autocomplete="given-name" spellcheck="false" type="text" input-class="govuk-!-width-two-thirds">
                    <govuk-input-label class="govuk-label"/>
                    <govuk-input-error-message/>
                </govuk-input>

                <govuk-input asp-for="LastName" autocomplete="family-name" spellcheck="false" type="text" input-class="govuk-!-width-two-thirds">
                    <govuk-input-label class="govuk-label"/>
                    <govuk-input-error-message/>
                </govuk-input>

                <govuk-input asp-for="Email" autocomplete="email" spellcheck="false" type="email" input-class="govuk-!-width-two-thirds">
                    <govuk-input-label class="govuk-label"/>
                    <govuk-input-error-message/>
                </govuk-input>

            </govuk-fieldset>

            <govuk-button type="submit">Continue</govuk-button>
        </form>
    </div>
</div>
