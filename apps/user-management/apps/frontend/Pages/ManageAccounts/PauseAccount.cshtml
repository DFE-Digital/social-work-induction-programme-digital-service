@page "{id:Guid}"
@model Dfe.Sww.Ecf.Frontend.Pages.ManageAccounts.PauseAccount

@{
    Model.Title = "Pause account";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <form method="post" data-test-id="link-form">
            <h1 class="govuk-heading-l" data-test-id="link-caption">Want to pause this account?</h1>
            <p>Select Confirm to pause @Model.AccountDetails?.FullName account.</p>
            <p>@Model.AccountDetails?.FirstName will still be able to log in and view her records.</p>
            <p>A confirmation email will be sent to @Model.AccountDetails?.Email</p>
            <p>You can unpause the account from the Manage Accounts page.</p>
            <div class="govuk-form-group">
                <div class="govuk-button-group">
                    <govuk-button type="Submit">Confirm</govuk-button>
                    <a title="Cancel" class="govuk-link govuk-link--no-visited-state" asp-page="ViewAccountDetails" asp-route-id="@Model.Id">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>
