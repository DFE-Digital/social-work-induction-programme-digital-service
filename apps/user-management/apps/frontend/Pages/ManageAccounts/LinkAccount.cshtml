@page "{id:Guid}"
@model Dfe.Sww.Ecf.Frontend.Pages.ManageAccounts.LinkAccount

@{
    Model.Title = "Link account";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <form method="post">
            <h1 class="govuk-heading-l">Are you sure you want to link?</h1>
            <p>Select Confirm to link this user to your organisation.</p>
            <p>A confirmation email will be sent to @Model.Email.</p>
            <p>You can unlink them again from the Manage Accounts page</p>
            <div class="govuk-form-group">
                <div class="govuk-button-group">
                    <govuk-button type="Submit">Confirm</govuk-button>
                    <a title="Cancel" class="govuk-link govuk-link--no-visited-state" asp-page="ViewAccountDetails" asp-route-id="@Model.Id">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>
