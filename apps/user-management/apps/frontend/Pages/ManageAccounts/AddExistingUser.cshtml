@page "{id:Guid?}"
@using Dfe.Sww.Ecf.Frontend.Extensions
@model Dfe.Sww.Ecf.Frontend.Pages.ManageAccounts.AddExistingUser

@{
    Model.Title = "Confirm account details";
}

@section Styles {
    <link href="@Url.Content("~/css/")" rel="stylesheet" type="text/css"/>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <form method="post">
            <h1 class="govuk-heading-xl">
                We've found an account that matches these details.
            </h1>

            <govuk-summary-list>
                <govuk-summary-list-row>
                    <govuk-summary-list-row-key>@Html.DisplayNameFor(model => model.Name)</govuk-summary-list-row-key>
                    <govuk-summary-list-row-value>
                        @Model.Name
                        <name-match-strength-bar name-match-result="@Model.NameMatchResult"></name-match-strength-bar>
                    </govuk-summary-list-row-value>
                </govuk-summary-list-row>
            </govuk-summary-list>

            <govuk-summary-list>
                <govuk-summary-list-row>
                    <govuk-summary-list-row-key>@Html.DisplayNameFor(model => model.SocialWorkEnglandNumber)</govuk-summary-list-row-key>
                    <govuk-summary-list-row-value>@Model.SocialWorkEnglandNumber</govuk-summary-list-row-value>
                </govuk-summary-list-row>
            </govuk-summary-list>

            <p>Do you want to link this account to your organisation?</p>
            <p>Click <b>Confirm</b> to link @Model.Name to your organisation.</p>
            <p>A confirmation email will be sent to @Model.Email.</p>
            <p>You can unlink them again from the Manage Accounts page.</p>

            <govuk-button type="submit">Confirm</govuk-button>
        </form>
    </div>
</div>
