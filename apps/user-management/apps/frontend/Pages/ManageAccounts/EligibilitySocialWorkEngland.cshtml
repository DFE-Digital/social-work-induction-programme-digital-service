@page
@model Dfe.Sww.Ecf.Frontend.Pages.ManageAccounts.EligibilitySocialWorkEngland

@{
    Model.Title = "Are they registered with Social Work England?";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <form method="post">
            <govuk-radios for="IsRegisteredWithSocialWorkEngland" asp-route-OrganisationId="@Model.OrganisationId">
                <govuk-radios-fieldset>
                    <govuk-radios-fieldset-legend is-page-heading="true" class="govuk-fieldset__legend--l">
                        Are they registered with Social Work England?
                    </govuk-radios-fieldset-legend>

                    <govuk-radios-item value="@true">
                        Yes
                        <govuk-radios-item-conditional>
                            <govuk-input for="SocialWorkerNumber" input-class="govuk-input--width-10" type="text" spellcheck="false">
                                <govuk-input-label>Enter their Social Work England registration number</govuk-input-label>
                                <govuk-input-hint>For example, SW1234</govuk-input-hint>
                            </govuk-input>
                        </govuk-radios-item-conditional>
                    </govuk-radios-item>

                    <govuk-radios-item value="@false">No</govuk-radios-item>
                </govuk-radios-fieldset>
            </govuk-radios>

            <govuk-button type="submit">Continue</govuk-button>
        </form>
    </div>
</div>
