@page
@model Dfe.Sww.Ecf.Frontend.Pages.ManageOrganisations.AddPrimaryCoordinator

@{
    Model.Title = "Add a primary coordinator for this organisation";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <form method="post" data-test-id="add-primary-coordinator">
            <govuk-fieldset>
                <govuk-fieldset-legend is-page-heading="true" class="govuk-fieldset__legend--l">Add a primary coordinator for this organisation</govuk-fieldset-legend>

                <govuk-input for="AccountDetails.FirstName" autocomplete="given-name" spellcheck="false" type="text">
                    <govuk-input-label/>
                    <govuk-input-error-message/>
                </govuk-input>

                <govuk-input for="AccountDetails.MiddleNames" autocomplete="additional-name" spellcheck="false" type="text">
                    <govuk-input-label/>
                    <govuk-input-error-message/>
                </govuk-input>

                <govuk-input for="AccountDetails.LastName" autocomplete="family-name" spellcheck="false" type="text">
                    <govuk-input-label/>
                    <govuk-input-error-message/>
                </govuk-input>

                <govuk-input for="AccountDetails.Email" autocomplete="email" spellcheck="false" type="email">
                    <govuk-input-label/>
                    <govuk-input-hint>We will send an invitation email to this email address</govuk-input-hint>
                    <govuk-input-error-message/>
                </govuk-input>

                <govuk-input for="AccountDetails.PhoneNumber" autocomplete="tel" spellcheck="false" type="tel" class="govuk-input--width-20">
                    <govuk-input-label/>
                    <govuk-input-error-message/>
                </govuk-input>

            </govuk-fieldset>

            <govuk-button type="submit">Continue</govuk-button>
        </form>
    </div>
</div>
