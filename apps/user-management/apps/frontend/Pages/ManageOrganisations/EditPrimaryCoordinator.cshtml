@page "{id:guid}"
@using GovUk.Frontend.AspNetCore.TagHelpers
@model Dfe.Sww.Ecf.Frontend.Pages.ManageOrganisations.EditPrimaryCoordinator

@{
    Model.Title = "Update primary coordinator details";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <form method="post" data-test-id="add-primary-coordinator">
            @if (Model.OrganisationName is not null)
            {
                <span class="govuk-caption-l">@Model.OrganisationName</span>
            }

            <govuk-fieldset>
                <govuk-fieldset-legend is-page-heading="true" class="govuk-fieldset__legend--l">Update primary coordinator details</govuk-fieldset-legend>

                <govuk-input for="PrimaryCoordinator.FirstName" autocomplete="given-name" spellcheck="false" type="text">
                    <govuk-input-label/>
                    <govuk-input-error-message/>
                </govuk-input>

                <govuk-input for="PrimaryCoordinator.MiddleNames" autocomplete="additional-name" spellcheck="false" type="text">
                    <govuk-input-label/>
                    <govuk-input-error-message/>
                </govuk-input>

                <govuk-input for="PrimaryCoordinator.LastName" autocomplete="family-name" spellcheck="false" type="text">
                    <govuk-input-label/>
                    <govuk-input-error-message/>
                </govuk-input>

                <govuk-input for="PrimaryCoordinator.Email" autocomplete="email" spellcheck="false" type="email">
                    <govuk-input-label/>
                    <govuk-input-hint>We will send an invitation email to this email address</govuk-input-hint>
                    <govuk-input-error-message/>
                </govuk-input>

                <govuk-input for="PrimaryCoordinator.PhoneNumber" autocomplete="tel" spellcheck="false" type="tel" class="govuk-input--width-20">
                    <govuk-input-label/>
                    <govuk-input-error-message/>
                </govuk-input>

            </govuk-fieldset>

            <govuk-button type="submit">Continue</govuk-button>
        </form>
    </div>
</div>
