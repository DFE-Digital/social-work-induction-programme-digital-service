@page "{id:guid}"
@using Dfe.Sww.Ecf.Frontend.Extensions
@using Dfe.Sww.Ecf.Frontend.Models.ManageOrganisation
@using GovUk.Frontend.AspNetCore.TagHelpers
@model Dfe.Sww.Ecf.Frontend.Pages.ManageOrganisations.EditPrimaryCoordinatorChangeType

@{
    Model.Title = "Are they registered with Social Work England?";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <form method="post">
            @if (Model.OrganisationName is not null)
            {
                <span class="govuk-caption-l">@Model.OrganisationName</span>
            }
            <govuk-radios for="ChangeType">
                <govuk-radios-fieldset>
                    <govuk-radios-fieldset-legend is-page-heading="true" class="govuk-fieldset__legend--l">
                        What type of change are you making to the primary coordinator?
                    </govuk-radios-fieldset-legend>

                    <govuk-radios-item value="@PrimaryCoordinatorChangeType.UpdateExistingCoordinator">@PrimaryCoordinatorChangeType.UpdateExistingCoordinator.GetDisplayName()</govuk-radios-item>
                    <govuk-radios-item value="@PrimaryCoordinatorChangeType.ReplaceWithNewCoordinator">@PrimaryCoordinatorChangeType.ReplaceWithNewCoordinator.GetDisplayName()</govuk-radios-item>
                </govuk-radios-fieldset>
            </govuk-radios>

            <govuk-button type="submit">Continue</govuk-button>
        </form>
    </div>
</div>
