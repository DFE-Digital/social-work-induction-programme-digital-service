@page
@using Dfe.Sww.Ecf.Frontend.Extensions
@using Dfe.Sww.Ecf.Frontend.Models
@using GovUk.Frontend.AspNetCore.TagHelpers
@model SelectEthnicGroup

@{
    Model.Title = "What is your ethnic group?";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

        <form method="post">
            <govuk-radios for="SelectedEthnicGroup">
                <govuk-radios-fieldset>
                    <govuk-radios-fieldset-legend is-page-heading="true" class="govuk-fieldset__legend--l">
                        What is your ethnic group?
                    </govuk-radios-fieldset-legend>

                    <govuk-radios-item value="@EthnicGroup.White">@EthnicGroup.White.GetDisplayName()</govuk-radios-item>
                    <govuk-radios-item value="@EthnicGroup.MixedOrMultipleEthnicGroups">@EthnicGroup.MixedOrMultipleEthnicGroups.GetDisplayName()</govuk-radios-item>
                    <govuk-radios-item value="@EthnicGroup.AsianOrAsianBritish">@EthnicGroup.AsianOrAsianBritish.GetDisplayName()</govuk-radios-item>
                    <govuk-radios-item value="@EthnicGroup.BlackAfricanCaribbeanOrBlackBritish">@EthnicGroup.BlackAfricanCaribbeanOrBlackBritish.GetDisplayName()</govuk-radios-item>
                    <govuk-radios-item value="@EthnicGroup.OtherEthnicGroup">@EthnicGroup.OtherEthnicGroup.GetDisplayName()</govuk-radios-item>

                    <govuk-radios-divider>or</govuk-radios-divider>
                    
                    <govuk-radios-item value="@EthnicGroup.PreferNotToSay">@EthnicGroup.PreferNotToSay.GetDisplayName()</govuk-radios-item>
                </govuk-radios-fieldset>
            </govuk-radios>

            <govuk-button type="submit">Continue</govuk-button>
        </form>
    </div>
</div>
