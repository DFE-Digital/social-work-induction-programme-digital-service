@page
@using Dfe.Sww.Ecf.Frontend.Extensions
@using Dfe.Sww.Ecf.Frontend.Models.RegisterSocialWorker
@using GovUk.Frontend.AspNetCore.TagHelpers
@model SelectRouteIntoSocialWork

@{
    Model.Title = "What was your entry route into social work?";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

        <form method="post">
            <govuk-radios for="SelectedRouteIntoSocialWork">
                <govuk-radios-fieldset>
                    <govuk-radios-fieldset-legend class="govuk-fieldset__legend--l">
                        What was your entry route into social work?
                    </govuk-radios-fieldset-legend>

                    <govuk-radios-item value="@RouteIntoSocialWork.StepUpToSocialWork">@RouteIntoSocialWork.StepUpToSocialWork.GetDisplayName()</govuk-radios-item>
                    <govuk-radios-item value="@RouteIntoSocialWork.ApproachSocialWork">@RouteIntoSocialWork.ApproachSocialWork.GetDisplayName()</govuk-radios-item>
                    <govuk-radios-item value="@RouteIntoSocialWork.DegreeApprenticeship">@RouteIntoSocialWork.DegreeApprenticeship.GetDisplayName()</govuk-radios-item>
                    <govuk-radios-item value="@RouteIntoSocialWork.UndergraduateApprenticeship">@RouteIntoSocialWork.UndergraduateApprenticeship.GetDisplayName()</govuk-radios-item>
                    <govuk-radios-item value="@RouteIntoSocialWork.PostgraduateApprenticeship">@RouteIntoSocialWork.PostgraduateApprenticeship.GetDisplayName()</govuk-radios-item>

                    <govuk-radios-divider> or</govuk-radios-divider>

                    <govuk-radios-item value="@RouteIntoSocialWork.Other">
                        @RouteIntoSocialWork.Other.GetDisplayName()
                        <govuk-radios-item-conditional>
                            <govuk-input for="OtherRouteIntoSocialWork" spellcheck="false" type="text">
                                <govuk-input-label>Enter your entry route</govuk-input-label>
                            </govuk-input>
                        </govuk-radios-item-conditional>
                    </govuk-radios-item>
                </govuk-radios-fieldset>
            </govuk-radios>

            <govuk-button type="submit">Continue</govuk-button>
        </form>
    </div>
</div>
