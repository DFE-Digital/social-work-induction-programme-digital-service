@page
@using Dfe.Sww.Ecf.Frontend.Extensions
@using Dfe.Sww.Ecf.Frontend.Models.RegisterSocialWorker
@using GovUk.Frontend.AspNetCore.TagHelpers
@model SelectEthnicGroupAsian

@{
    Model.Title = "Which of the following best describes your Asian or Asian British background?";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

        <form method="post">
            <govuk-radios for="SelectedEthnicGroupAsian">
                <govuk-radios-fieldset>
                    <govuk-radios-fieldset-legend is-page-heading="true" class="govuk-fieldset__legend--l">
                        Which of the following best describes your Asian or Asian British background?
                    </govuk-radios-fieldset-legend>

                    <govuk-radios-item value="@EthnicGroupAsian.Indian">@EthnicGroupAsian.Indian.GetDisplayName()</govuk-radios-item>
                    <govuk-radios-item value="@EthnicGroupAsian.Pakistani">@EthnicGroupAsian.Pakistani.GetDisplayName()</govuk-radios-item>
                    <govuk-radios-item value="@EthnicGroupAsian.Bangladeshi">@EthnicGroupAsian.Bangladeshi.GetDisplayName()</govuk-radios-item>
                    <govuk-radios-item value="@EthnicGroupAsian.Chinese">@EthnicGroupAsian.Chinese.GetDisplayName()</govuk-radios-item>

                    <govuk-radios-item value="@EthnicGroupAsian.AnyOtherAsianBackground">
                        @EthnicGroupAsian.AnyOtherAsianBackground.GetDisplayName()
                        <govuk-radios-item-conditional>
                            <govuk-input for="OtherEthnicGroupAsian" spellcheck="false" type="text">
                                <govuk-input-label>How would you describe your background? (optional)</govuk-input-label>
                            </govuk-input>
                        </govuk-radios-item-conditional>
                    </govuk-radios-item>

                    <govuk-radios-divider>or</govuk-radios-divider>

                    <govuk-radios-item value="@EthnicGroupAsian.PreferNotToSay">@EthnicGroupAsian.PreferNotToSay.GetDisplayName()</govuk-radios-item>
                </govuk-radios-fieldset>
            </govuk-radios>

            <govuk-button type="submit">Continue</govuk-button>
        </form>
    </div>
</div>
