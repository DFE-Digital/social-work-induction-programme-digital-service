@page
@using Dfe.Sww.Ecf.Frontend.Extensions
@using Dfe.Sww.Ecf.Frontend.Models
@using Dfe.Sww.Ecf.Frontend.Models.RegisterSocialWorker
@using GovUk.Frontend.AspNetCore.TagHelpers
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model SelectEthnicGroupOther

@{
    Model.Title = "Which of the following best describes your background?";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

        <form method="post">
            <govuk-radios for="SelectedEthnicGroupOther">
                <govuk-radios-fieldset>
                    <govuk-radios-fieldset-legend is-page-heading="true" class="govuk-fieldset__legend--l">
                        Which of the following best describes your background?
                    </govuk-radios-fieldset-legend>

                    <govuk-radios-item value="@EthnicGroupOther.Arab">@EthnicGroupOther.Arab.GetDisplayName()</govuk-radios-item>

                    <govuk-radios-item value="@EthnicGroupOther.AnyOtherEthnicGroup">
                        @EthnicGroupOther.AnyOtherEthnicGroup.GetDisplayName()
                        <govuk-radios-item-conditional>
                            <govuk-input for="OtherEthnicGroupOther" spellcheck="false" type="text">
                                <govuk-input-label>How would you describe your background? (optional)</govuk-input-label>
                            </govuk-input>
                        </govuk-radios-item-conditional>
                    </govuk-radios-item>

                    <govuk-radios-divider>or</govuk-radios-divider>

                    <govuk-radios-item value="@EthnicGroupOther.PreferNotToSay">@EthnicGroupOther.PreferNotToSay.GetDisplayName()</govuk-radios-item>
                </govuk-radios-fieldset>
            </govuk-radios>

            <govuk-button type="submit">Continue</govuk-button>
        </form>
    </div>
</div>
