#!/bin/bash
# .ddev/commands/web/move-setup-webservice
# This command moves the `install-scripts\setup_webservice.php` file into the Moodle directory, so it can be used in the ddev scripts
# Usage:
#   ddev move-setup-webservice

set -eo pipefail

# Define source and destination
SOURCE="../install-scripts/setup_webservice.php"
DESTINATION="public/"

# Check if the file exists in the repo root
if [ ! -f "$SOURCE" ]; then
  echo "Error: File '$SOURCE' not found in repository root."
  exit 1
fi

# Move the file
mv "$SOURCE" "$DESTINATION"

# Confirm the move
if [ $? -eq 0 ]; then
  echo "File '$SOURCE' moved to '$DESTINATION' successfully."
else
  echo "Failed to move '$SOURCE'."
  exit 1
fi
